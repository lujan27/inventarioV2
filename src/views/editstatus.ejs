<body>

    <section class="home-section">
        <%- include('includes/nav.ejs') %>

    <div class="container mt-4">

<div class="container-fluid pt-4 mt-4">
    <a href="#" onclick="window.history.back()" class="btn btn-outline-dark btn-sm mb-4">
                <i class='bx bx-arrow-back pr-1'></i>Regresar
            </a>
    <div class="subcontenedor">
        <div class="bloque activo">
          <div class="justify-content-center row">

            <form action="/user/editstatus/<%= editstatus._id%>?_method=PUT" method="POST">
                <% if(editstatus){%> 
                <div class="form-group" name="formulario">
                    <label>Estatus de la orden: </label>
                    <select class="custom-select" name="status" id="" value="<%= editstatus.status%>">
                        <option value="">Estatus</option>
                        <option <%= editstatus.status =='aceptado' ? "selected" : '' %> value="aceptado">Aceptado</option>
                        <option <%= editstatus.status =='denegado' ? "selected" : '' %> value="denegado">Denegado</option>
                        <option <%= editstatus.status =='pendiente a revisión' ? "selected" : '' %> value="pendiente a revisión">Pendiente a revisión</option>
                        <option <%= editstatus.status =='solicitado' ? "selected" : '' %> value="solicitado">Solicitado</option>
                    </select>
                </div>
                <% }; %>
                <div class="form-group">
                    <button class="btn btn-outline-primary btn-block" id="Gdisabled">Guardar</button>
                </div>
                
            </form>


          </div>
        </div>
    </div>
</div> 

</div>
