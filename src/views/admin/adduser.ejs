<%- include('../includes/sidebar.ejs') %>
<%- include('../includes/header.ejs') %>


<body>
    <section class="home-section">
        <%- include('../includes/nav.ejs') %>
    <div class="container mt-2">
        <%- include('../includes/alerts.ejs') %>


        <div class="row pt-4 mt-4">
            <div class="col-md-8 mx-auto pb-4 mb-4">

                <a href="/admin/allusers" class="btn btn-outline-dark btn-sm mb-4">
                    <i class='bx bx-arrow-back pr-1'></i>Regresar
                </a>

                <div class="card">
                    <div class="card-header text-center">
                        NUEVO USUARIO
                    </div>
                    <div class="card-body">
                        <form action="/admin/adduser" method="POST">
                            <div class="form-group">
                                <label>Nombre del empleado: </label>
                                <input type="text" class="form-control" name="name" placeholder="Nombre del empleado...." autofocus>
                            </div>
                            <div class="form-group">
                                <label>Apellido del empleado: </label>
                                <input type="text" class="form-control" name="lastname" placeholder="Apellido del empleado....">
                            </div>
                            <div class="form-group">
                                <label>Nombre de usuario: </label>
                                <input type="text" class="form-control" id="userinput" name="username" placeholder="Ingresa el nombre del usuario...." maxlength="15">
                            </div>
                            <div class="form-group">
                                <label>Correo electronico: </label>
                                <input type="email" class="form-control" name="email" placeholder="Ejemplo@gmail.com....">
                            </div>
                            <div class="form-group">
                                <label>Contraseña: </label>
                                <input type="password" class="form-control" name="password" placeholder="Ingresa una contraseña....">
                            </div>
            
                            <div class="form-group">
                                <label>Rol</label>
                                <select class="custom-select" id="listRol" name="role">
                                        <option value="">Asigna un rol al usuario...</option>
                                        <option value="administrador">Administrador</option>
                                        <option value="coordinador">Coordinador</option>
                                        <option value="usuario">Usuario</option>
                                </select>
                            </div>
                            <div class="form-group" name="formulario">
                                <label>Recinto al que pertenece: </label>
                                <select class="form-control" name="ranch" id="">
                                    <option value="">Asigna el rancho al que pertenece...</option>
                                    <% ranches.forEach(function(rancho){%> 
                                    <option value="<%= rancho.ranch_name %>"><%= rancho.ranch_name %> </option>
                                    <% }); %> 
                                </select>
                            </div>
            
                            <div class="form-group">
                                <button class="btn btn-outline-primary btn-block" id="Gdisabled">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <br>
    <%- include('../includes/foot.ejs') %>
</section>
 


<%- include('../includes/scripts') %>
<script src="/js/admin/add-users.js"></script>
<%- include('../includes/footer.ejs') %>