<%- include('../includes/header.ejs') %>


    <section class="home-section pt-4 mt-4">
        <%- include('../includes/alerts.ejs') %>

        <div class="container">

            

            <div class="col">
                <div class="row">
                    <% if(user){%>
                    <div class="col">
                        <img src="../img/profile.jpg" class="img-fluid rounded-circle float-start img-profile-size mx-auto d-block">
                    </div>
                    <div class="col">
                        <div class="col-16">
                            
                            <div class="row">
                                <div class="col-6">
                                    <label class="mt-4">Nombre:</label>
                                    <h4 ><%= user.name%></h4>   
                                </div>
                                <div class="col-6">
                                    <label class="mt-4">Apellido:</label>
                                    <h4><%= user.lastname%></h4>   
                                </div>
                            </div>
        
                            <div class="row">
                                <div class="col-6">
                                    <label class="mt-4">Rol:</label>
                                    <h4><%= user.role%></h4>   
                                </div>
                                <div class="col-6">
                                    <label class="mt-4">Rancho:</label>
                                    <h4><%= user.ranch%></h4>   
                                </div>
                            </div>
        
                            <div class="row">
                                <div class="col">
                                    <label class="mt-4">Nombre de usuario:</label>
                                    <h4><%= user.username%></h4>   
                                </div>
                            </div>
        
                            <div class="row">
                                <div class="col-8">
                                    <label class="mt-4">Correo electronico:</label>
                                    <h4><%= user.email%></h4>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    <!--<img src="../img/profile.jpg" class="img-fluid rounded-circle float-start img-profile-size mx-auto d-block">-->
                     <% }; %>
                </div>
            </div>

            
        </div>
        
