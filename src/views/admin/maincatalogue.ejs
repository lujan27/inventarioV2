<body>

<section class="home-section pt-4 mt-4">
    <div class="container mt-2">
        <%- include('../includes/alerts.ejs') %>

        <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
            <li class="nav-item"><a class="nav-link" href="/admin/allusers">Usuarios</a></li>
            <li class="nav-item"><a class="nav-link" href="/admin">Inventario principal</a></li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Ranchos</a>
                <ul class="dropdown-menu">

                <% RanchsBD.forEach(rancho => { %>

                <li><a class="dropdown-item" href="/admin/ranchos/<%=rancho._id%>"><%= rancho.ranch_name %></a></li>

                <% }); %>

                </ul>
            </li>

        </ul>


        <div class="row pt-4 mt-4">
            <div class="col-md-8 mx-auto pb-4 mb-4">

                <a href="/catalogue" class="btn btn-outline-dark btn-sm mb-4">
                    <i class='bx bx-arrow-back pr-1'></i>Regresar
                </a>
            
                <div class="card">
                    <div class="card-header text-center">
                        NUEVO PRODUCTO CATALOGO PRINCIPAL
                    </div>
                    <div class="card-body">
                        <form action="/admin/addmaincatalogue" method="POST">                    
                            <div class="form-group">
                                <label>Nombre Producto: </label>
                                <input type="text" class="form-control" name="nameProduct" placeholder="Nombre Producto...." required>
                            </div>
                            <div class="form-group">
                                <label>Descripci√≥n: </label>
                                <input type="text" class="form-control" name="descriptionProduct" placeholder="Descripcion...." required>
                            </div>
                            
                            <div class="form-group">
                                <label>Unidad de medida: </label>
                                <select class="form-control prod-unit" name="unit">
                                    <option value="">Seleccione la unidad</option>
                                    <option value="pza">Pieza</option>
                                    <option value="kg">Kilogramo</option>
                                    <option value="g">Gramo</option>
                                    <option value="t">Tonelada</option>
                                    <option value="l">Litro</option>
                                    <option value="ml">Mililitro</option>
                                    <option value="km">Kilometro</option>
                                    <option value="m">Metro</option>
                                    <option value="cm">Centimetro</option>
                                </select>
                            </div>
                            
                            <div class="form-group">
                                <button class="btn btn-dark btn-block" id="Gdisabled">Guardar</button>
                            </div>
                            
                        </form>
                    </div>
                </div>
        
            </div>
        </div>

    </section>
