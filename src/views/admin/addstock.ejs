<%- include('../includes/header') %> 
<%- include('../includes/alerts.ejs') %>

<body>
    <div class="card">
        <div class="card-header text-center">
            NUEVO RANCHO
        </div>
        <div class="card-body">
            <form action="/admin/addstock" method="POST">
                <div class="form-group" name="formulario">
                    <label>Recinto al que pertenece: </label>
                    <select class="form-control" name="ranch_owner" id="">
                        <option value="">Asigna el rancho al que pertenece...</option>
                        <% RanchsBD.forEach(function(rancho){%> 
                        <option value="<%= rancho.ranch_name %>"><%= rancho.ranch_name %> </option>
                        <% }); %> 
                    </select>
                </div>
                <div class="form-group">
                    <label>Materia prima: </label>
                    <input type="text" class="form-control" name="name_materiaPrima" placeholder="Materia Prima....">
                </div>
                <div class="form-group">
                    <label>Descripcion: </label>
                    <input type="text" class="form-control" name="description_materiaPrima" placeholder="Descripcion....">
                </div>
                <div class="form-group">
                    <label>Cantidad: </label>
                    <input type="number" class="form-control" name="quantity" placeholder="Materia Prima....">
                </div>
                <div class="form-group">
                    <label>Unidad de medida: </label>
                    <input type="text" class="form-control" name="unidad_medida" placeholder="Unidad de medida....">
                </div>
                
                
                <div class="form-group">
                    <button class="btn btn-dark btn-block" id="Gdisabled">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</body>

<%- include('../includes/scripts') %>