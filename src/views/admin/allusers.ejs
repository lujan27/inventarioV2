<%- include('../includes/sidebar.ejs') %>
<%- include('../includes/header.ejs') %>

<body class="bodycolor">
    <section class="home-section">
        <%- include('../includes/nav.ejs') %>
        <div class="container mt-4">
            <%- include('../includes/alerts.ejs') %>

                    <div class="container-fluid pt-4 mt-4">
                        <div class="subcontenedor">                       
                            <div class="bloque activo">
                            <div class="justify-content-center">
                                
                                    <div class="container-fluid row">
                                        <div class="col-2">
                                            <a href="/admin/adduser" class="btn btn-outline-info mb-4" data-toggle="tooltip" title="Agrega un nuevo usuario">
                                                <i class='bx bxs-user-plus' ></i>
                                                Nuevo Usuario
                                            </a>
                                        </div>
                                        <div class="col-2">
                                            <a href="/admin/addranch" class="btn btn-outline-success mb-4" data-toggle="tooltip" title="Agrega un nuevo rancho">
                                                <i class='bx bx-spa'></i>
                                                Nuevo Rancho
                                            </a>
                                        </div>                                        
                                    </div>

                                <table id="inventoryTable" data-column-orderable="1, 1, 0, 1, 1, 0" class="w-100 data-table table table-lg table-striped">
                                    <thead class="thead">
                                        <tr>
                                            <th scope="col">Nombre</th>
                                            <th scope="col">Apellido</th>
                                            <th scope="col">Usuario</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Rol</th>
                                            <th scope="col">Rancho</th>
                                            <th scope="col">Ubicacion</th>
                                            <th colspan="2">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% usuarios.forEach(usuario => { %>
                                        <tr>
                                            <td><%= usuario.name %> </td>
                                            <td><%= usuario.lastname %> </td>
                                            <td><%= usuario.username %> </td>
                                            <td><%= usuario.email %> </td>
                                            <td><%= usuario.role %> </td>
                                            <td><%= usuario.ranch %> </td>
                                            <% if(usuario.results == ''){ %> 
                                                <td>No existe</td>
                                            <% } else {%> 
                                            <td><%= usuario.results[0].location %> </td>
                                            <% } %>
                                            <td>
                                                <div class="btn-group dropstart">
                                                    <button type="button" class="btn btn-color my-2 my-sm-0 dropdown-toggle opts"
                                                        data-bs-toggle="dropdown" aria-expanded="false" data-toggle="tooltip" title="Clic para desplegar las opciones">
                                                        <i class="fa-solid fa-list"></i>
                                                    </button>
                                                    
                                                    <ul class="dropdown-menu">                                                    
                                                        
                                                        <li><hr class="dropdown-divider"></li>
                                                        <center>
                                                        <li>
                                                            <a type="button" class="btn btn-outline-primary my-2 my-sm-0" href="/admin/edituser/<%= usuario._id%>" data-toggle="tooltip" title="Editar la informaci√≥n de <%=usuario.username%> "><i class='bx bxs-edit' ></i>Editar</a>
                                                            <input type="hidden" name="_method" value="delete">
                                                        </li>
                                                        </center>
                                                        <li><hr class="dropdown-divider"></li>
                                                        <center>
                                                        <li>
                                                            <form action="deleteuser/<%= usuario._id%>?_method=delete" method="post">
                                                                <button type="submit" class="btn btn-outline-danger my-2 my-sm-0" data-toggle="tooltip" title="Eliminar usuario <%=usuario.username%> "><ion-icon name="trash-outline"></ion-icon> Eliminar</button>
                                                            </form>
                                                        </li>
                                                        </center>
                                                    </ul>
                                                
                                                </div>
                                        </td>
                                        </tr>
                                        <% }); %>
                                   
                                    </tbody>
                                    <caption class="pl-2">Lista de usuarios</caption>
                                </table>
                            </div>
                            </div>
                        </div>        
                    </div>
        </div>
        <br>
        <%- include('../includes/foot.ejs') %>
    </section>

<%- include('../includes/scripts.ejs') %>
<%- include('../includes/footer.ejs') %>